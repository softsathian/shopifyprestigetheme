<style>
    .Grid__Center {
        text-align: center !important;
    }

    .rating-wrapper {
        margin-bottom: 1.5rem;
    }

    .rating-wrapper .rating {
        flex-direction: column;
    }

    .rating-wrapper .rating svg.Icon {
        width: 16px;
        height: 16px;
    }

    .rating-wrapper .rating span.rating__caption {
          margin-top: 10px;
      }
</style>

<section class="Section Section--spacingNormal" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="reviews">
<div class="reviews-section">
    <div class="Container container-wrapper">
        <header class="SectionHeader SectionHeader--center">
            <h2 class="SectionHeader__Heading Heading u-h1">Reviews</h2>
        </header>
        <div class="ReviewsListWrapper">
            <div class="ReviewsList Grid Grid--m Grid--center">
                {%- for block in section.blocks -%}
                    <div class="Grid__Cell 1/2--tablet 1/4--lap-and-up Grid__Center">
                        <div class="rating-wrapper">
                            {%- render 'product-rating', product: product -%}
                        </div>
                        <h3 class="SectionHeader__SubHeading Heading u-h4">{{ block.settings.subheading }}</h3>
                        <div class="">
                            {{ block.settings.content }}
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
</section>

{% schema %}
{
  "name": "Product Reviews",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
   ],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "text",
      "name": "Customer Reviews",
      "settings": [
        {
            "type": "text",
            "id": "subheading",
            "label": "Contact Heading"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Product Reviews"
    }
  ]
}
{% endschema %}